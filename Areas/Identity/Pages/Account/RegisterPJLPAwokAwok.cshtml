@* @page
@model RegisterPJLPModel
@{
    ViewData["Title"] = "Registrasi Pelamar";
}

<style>
    .centerForm {
        display:block;
        margin-left:auto;
        margin-right:auto;        
        max-width: 600px;;
    }
</style>

<div class="row">
    <div class="col-12">        
        <div class="centerForm">
            <div class="text-center mt-3 mb-4">
                <img src="~/assets/images/logo-dlh.png" class="img-top text-center" alt="" width="175px" height="175px" />
            </div>            

            <div class="card">                
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.NIK"></label>
                            <input type="text" asp-for="Input.NIK" class="form-control" autocomplete="username" aria-required="true" />                    
                            <span asp-validation-for="Input.NIK" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />                    
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.FullName"></label>
                            <input asp-for="Input.FullName" class="form-control" aria-required="true" />                    
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />                    
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Input.ConfirmPassword">Konfirmasi Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />                    
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary">Register</button>
                        </div>                   
                    </form>
                </div>
            </div>            
        </div>        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@
