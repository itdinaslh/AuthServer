@model AppModel

<form action="/manage/applications/save" method="post">
    <div class="modal-header">
        <h4 class="modal-title">Add Application</h4>
        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Client ID</label>
            <input type="text" asp-for="ClientID" class="form-control" autocomplete="off" autofocus />
            <span asp-validation-for="ClientID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="">Client Secret</label>
            <input type="text" asp-for="ClientSecret" class="form-control" autocomplete="off" />
        </div>
        <div class="form-group">
            <label for="">Consent Type</label>
            <select asp-for="ConsentType" class="form-control">
                <option value="true">Explicit</option>
                <option value="false">Implicit</option>
            </select>            
        </div>
        <div class="form-group">
            <label for="">Display Name</label>
            <input type="text" asp-for="DisplayName" class="form-control" autocomplete="off" />
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="">Logout URI</label>
            <input type="text" asp-for="LogoutUri" class="form-control" />
            <span asp-validation-for="LogoutUri" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="">Redirect URI</label>
            <input type="text" asp-for="RedirectUri" class="form-control" />
            <span asp-validation-for="RedirectUri" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>