@model ChangeModel

<form action="/user/password/change" method="post">
    <div class="modal-header">
        <h4 class="modal-title">Change Password User</h4>
        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>User ID</label>
            <input type="text" asp-for="UserID" class="form-control" />
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input asp-for="Confirm" class="form-control" />
            <span asp-validation-for="Confirm" class="text-danger"></span>
        </div>        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>